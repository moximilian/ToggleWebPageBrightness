{
    "name": "Brightness Control Extension",
    "version": "0.2.1",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "nativeMessaging",
        "tabs",
        "tabGroups",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_start"
        }
    ]
}